<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingBottom="@dimen/x10"
    android:paddingTop="@dimen/x10" >

    <TextView
        android:id="@+id/tv_address"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/x5"
        android:layout_marginLeft="@dimen/x50"
        android:text="霞阳镇石子坝村一组"
        android:textSize="@dimen/fontx14" />

    <LinearLayout
        android:id="@+id/ll_poverty"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/x50"
        android:layout_marginBottom="@dimen/x5"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/action_dl_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="已脱贫数"
            android:textSize="@dimen/fontx14" />

        <TextView
            android:id="@+id/action_dl"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/x50"
            android:text="9"
            android:textColor="@color/red_ff4242"
            android:textSize="@dimen/fontx14" />

        <TextView
            android:id="@+id/tv_number_ren"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="人"
            android:textSize="@dimen/fontx14" />

        <ImageView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:layout_marginRight="@dimen/x20"
            android:src="@drawable/into" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_not_poverty"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/x50"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/jtsr_rjsr_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="未脱贫数"
            android:textSize="@dimen/fontx14" />

        <TextView
            android:id="@+id/jtsr_rjsr"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/x50"
            android:text="6"
            android:textColor="@color/red_ff4242"
            android:textSize="@dimen/fontx14" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="人"
            android:textSize="@dimen/fontx14" />

        <ImageView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:layout_marginRight="@dimen/x20"
            android:src="@drawable/into" />
    </LinearLayout>

</LinearLayout>