<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >
    
    <include
        android:id="@+id/optionsTile"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        layout="@layout/top_title" />
    
    <LinearLayout
        android:id="@+id/oldpwd_line"
         android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:orientation="horizontal"
        android:layout_below="@id/optionsTile" >
        
     <TextView
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"
         android:text="旧密码"
         android:textSize="18sp" 
         android:layout_marginTop="10dp"
        android:paddingLeft="20dp"
        android:paddingRight="27dp"/>
    
    <EditText android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/oldPwd"
        android:hint="你现在的密码"
        android:digits="0123456789abcdefghijklmnopqrstuvwxyzABCDEFGHIJKLMNOPQRSTUVWXYZ"
        android:background="@null"
        android:textSize="18sp"
        android:layout_marginTop="10dp"
        android:password="true"
        android:paddingRight="15dp"/>
    </LinearLayout>
    
    <View
        android:id="@+id/line_1"
        android:layout_below="@id/oldpwd_line" 
        android:layout_width="match_parent"
        android:layout_height="1dip"
        android:background="#EDEDED"
        android:layout_marginTop="10dp"
        android:layout_margin="5dp" />
    
    <LinearLayout
        android:id="@+id/newpwd_line"
         android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:orientation="horizontal"
        android:layout_below="@id/line_1" >
        
     <TextView
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"
         android:text="新密码"
         android:textSize="18sp" 
         android:layout_marginTop="10dp"
        android:paddingLeft="20dp"
        android:paddingRight="27dp"/>
    
    <EditText android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/newPwd"
        android:hint="6到15位数字或字母密码"
        android:digits="0123456789abcdefghijklmnopqrstuvwxyzABCDEFGHIJKLMNOPQRSTUVWXYZ"
        android:background="@null"
        android:textSize="18sp"
        android:password="true"
        android:layout_marginTop="10dp"
        android:paddingRight="15dp"/>
    </LinearLayout>
    
    <View
        android:id="@+id/line_2"
        android:layout_below="@id/newpwd_line" 
        android:layout_width="match_parent"
        android:layout_height="1dip"
        android:background="#EDEDED"
        android:layout_marginTop="10dp"
        android:layout_margin="5dp" />
    
    <LinearLayout
        android:id="@+id/confirm_line"
         android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:orientation="horizontal"
        android:layout_below="@id/line_2" >
        
    <TextView
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"
         android:text="确认密码"
         android:textSize="18sp" 
         android:layout_marginTop="10dp"
        android:paddingLeft="20dp"
        android:paddingRight="8dp"/>
    
    <EditText android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/confirmPwd"
        android:hint="请再输入一遍密码"
        android:digits="0123456789abcdefghijklmnopqrstuvwxyzABCDEFGHIJKLMNOPQRSTUVWXYZ"
        android:background="@null"
        android:textSize="18sp"
        android:password="true"
        android:layout_marginTop="10dp"
        android:paddingRight="15dp"/>
    </LinearLayout>
    
    <View
        android:id="@+id/line_3"
        android:layout_below="@id/confirm_line" 
        android:layout_width="match_parent"
        android:layout_height="1dip"
        android:background="#EDEDED"
        android:layout_marginTop="10dp"
        android:layout_margin="5dp" />
    
   <LinearLayout
        android:layout_below="@id/line_3" 
        android:layout_width="match_parent"
        android:layout_height="match_parent">
          
    <Button
         android:id="@+id/btn_loginout"
         android:layout_width="match_parent"
         android:layout_height="40dp"
         android:layout_marginLeft="60dp"
         android:layout_marginRight="60dp"
         android:background="@drawable/btn_bg"
         android:layout_marginTop="20dp"
         android:text="提交"
         android:textColor="#fff" />
    </LinearLayout>

</RelativeLayout>

