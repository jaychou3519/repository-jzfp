    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/x1"
        android:background="#dcdcdc" />

    <RelativeLayout
        android:id="@+id/rl_health"
        android:layout_width="match_parent"
        android:layout_height="@dimen/y30"
        android:orientation="horizontal" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/x20"
            android:text="健康状态"
            android:textColor="#000"
            android:textSize="@dimen/x15" />

        <ImageView
            android:id="@+id/iv_into_health"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_margin="@dimen/x10"
            android:src="@drawable/into" />

        <TextView
            android:id="@+id/tv_health"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toLeftOf="@id/iv_into_health"
            android:hint="请选择健康状态"
            android:singleLine="true"
            android:textColor="#000"
            android:textColorHint="#d6d6d6"
            android:textSize="@dimen/x15" />
    </RelativeLayout>
    
    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/x1"
        android:background="#dcdcdc" />
    
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/y30"
        android:orientation="horizontal" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/x20"
            android:text="就业情况"
            android:textColor="#000"
            android:textSize="@dimen/x15" />

        <ImageView
            android:id="@+id/iv_into_work"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_margin="@dimen/x10"
            android:src="@drawable/into"
            android:visibility="invisible" />

        <EditText
            android:id="@+id/et_work"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toLeftOf="@id/iv_into_work"
            android:background="@null"
            android:hint="请填写就业情况"
            android:maxLength="18"
            android:singleLine="true"
            android:textColor="#000"
            android:textColorHint="#d6d6d6"
            android:textSize="@dimen/x15" />
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/x1"
        android:layout_marginBottom="@dimen/x5"
        android:background="#dcdcdc" />
    
    
</LinearLayout>
