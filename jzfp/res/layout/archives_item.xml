<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/rl_archives"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:paddingBottom="@dimen/x10"
    android:paddingTop="@dimen/x10" >

    <TextView
        android:id="@+id/tv_address"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_marginBottom="@dimen/x5"
        android:layout_marginLeft="@dimen/x50"
        android:text="霞阳镇石子坝村一组"
        android:textSize="@dimen/fontx14" />

    <TextView
        android:id="@+id/tv_number_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@id/tv_address"
        android:layout_marginLeft="@dimen/x50"
        android:text="建档人数"
        android:textSize="@dimen/fontx14" />

    <TextView
        android:id="@+id/tv_number"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv_address"
        android:layout_marginLeft="@dimen/x50"
        android:layout_toRightOf="@id/tv_number_name"
        android:text="9"
        android:textColor="@color/red_ff4242"
        android:textSize="@dimen/fontx14" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv_address"
        android:layout_toRightOf="@id/tv_number"
        android:text="人"
        android:textSize="@dimen/fontx14" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginRight="@dimen/x20"
        android:src="@drawable/into" />

</RelativeLayout>