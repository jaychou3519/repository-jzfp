        android:baselineAligned="false"
        android:orientation="horizontal">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="乡(镇)长电话"
            android:textSize="@dimen/x14" />

        <EditText
            android:id="@+id/et_xzzdh"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@null"
            android:hint="请输入电话号码"
            android:inputType="phone"
            android:maxLength="11"
            android:textSize="@dimen/x14"
            android:visibility="gone" />
        
         <TextView
           android:id="@+id/tx_xzzdh"
           android:layout_width="0dp"
           android:layout_height="wrap_content"
           android:layout_weight="1"
           android:background="@null"
           android:textSize="@dimen/x14"/>
    </LinearLayout>
    
    <LinearLayout
        android:id="@+id/ll_csj"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/x10"
        android:layout_marginTop="@dimen/x10"
        android:baselineAligned="false"
        android:orientation="horizontal">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="村书记姓名"
            android:textSize="@dimen/x14" />

        <EditText
            android:id="@+id/et_csj"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@null"
            android:hint="请输入姓名"
            android:textSize="@dimen/x14"
            android:visibility="gone" />
        
        <TextView
           android:id="@+id/tx_csj"
           android:layout_width="0dp"
           android:layout_height="wrap_content"
           android:layout_weight="1"
           android:background="@null"
           android:textSize="@dimen/x14"/>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_csjdh"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/x10"
        android:layout_marginLeft="@dimen/x10"
        android:layout_marginTop="@dimen/x10"
        android:baselineAligned="false"
        android:orientation="horizontal">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="村书记电话"
            android:textSize="@dimen/x14" />

        <EditText
            android:id="@+id/et_csjdh"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@null"
            android:hint="请输入电话号码"
            android:inputType="phone"
            android:maxLength="11"
            android:textSize="@dimen/x14"
            android:visibility="gone" />
        
         <TextView
           android:id="@+id/tx_csjdh"
           android:layout_width="0dp"
           android:layout_height="wrap_content"
           android:layout_weight="1"
           android:background="@null"
           android:textSize="@dimen/x14"/>
    </LinearLayout>
    
    <LinearLayout
        android:id="@+id/ll_czr"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/x10"
        android:layout_marginTop="@dimen/x10"
        android:baselineAligned="false"
        android:orientation="horizontal">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="村主任姓名"
            android:textSize="@dimen/x14" />

        <EditText
            android:id="@+id/et_czr"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@null"
            android:hint="请输入姓名"
            android:textSize="@dimen/x14"
            android:visibility="gone" />
        
         <TextView
           android:id="@+id/tx_czr"
           android:layout_width="0dp"
           android:layout_height="wrap_content"
           android:layout_weight="1"
           android:background="@null"
           android:textSize="@dimen/x14"/>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_czrdh"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/x10"
        android:layout_marginLeft="@dimen/x10"
        android:layout_marginTop="@dimen/x10"
        android:baselineAligned="false"
        android:orientation="horizontal">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="村主任电话"
            android:textSize="@dimen/x14" />

        <EditText
            android:id="@+id/et_czrdh"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@null"
            android:hint="请输入电话号码"
            android:inputType="phone"
            android:maxLength="11"
            android:textSize="@dimen/x14"
            android:visibility="gone" />
        
         <TextView
           android:id="@+id/tx_czrdh"
           android:layout_width="0dp"
           android:layout_height="wrap_content"
           android:layout_weight="1"
           android:background="@null"
           android:textSize="@dimen/x14"/>
    </LinearLayout>
  
    
</LinearLayout>